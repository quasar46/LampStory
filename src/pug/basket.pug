                                    li.col-4
                                        span.price 1290 ₽

                    .basket__data
                        .container
                            h2.main-title Данные для заказа
                            form(action="get")
                                ul
                                    li
                                        input(type="text" placeholder="Ваше Ф.И.О.")
                                    li
                                        input(type="text" placeholder="Ваш E-mail")
                                    li
                                        input(type="text" placeholder="Ваш телефон")
                                    li
                                        input(type="checkbox" id="check1")
                                        label(for="check1") Согласен с <a href="">обработкой персональных данных</a> и <a href="">условиями пользовательского соглашения </a>

                    .basket__method
                        .container
                            .change
                                .change__delivery
                                    h2.main-title Выберите способ доставки:
                                    .delivery-logo
                                    .change-city
                                        h3 Название населенного пункта
                                        input(type="text" placeholder="Москва")
                                    .change-method
                                        h3 Способ доставки
                                        ul
                                            li
                                                input(type="radio" name="change-method" value="radio1" id="radio1")
                                                label(for="radio1")
                                                    p Курьером до двери
                                                    p.price от 291.12 руб.
                                                    p.time 1 рабочий день
                                            li
                                                input(type="radio" name="change-method" value="radio2" id="radio2")
                                                label(for="radio2")
                                                    p Пункт выдачи заказов
                                                    p.price от 140.00 руб.
                                                    p.time 1 рабочий день
                                            li
                                                input(type="radio" name="change-method" value="radio3" id="radio3")
                                                label(for="radio3")
                                                    p Отделение Почты РФ
                                                    p.price от 202.12 руб.
                                                    p.time 1 рабочий день
                                ul.change-payment
                                    li
                                        h2.main-title Способ оплаты:
                                        ul
                                            li
                                                input(type="radio" name="payment" value="radio4" id="radio4")
                                                label(for="radio4") Оплата наличными
                                            li
                                                input(type="radio" name="payment" value="radio5" id="radio5")
                                                label(for="radio5") Безналичный расчет
                                    li
                                        h2.main-title Итого:
                                        span.price 21 750 ₽
                                    li.btns
                                        a.main-button ОФОРМИТЬ ЗАКАЗ
                                        input(type="reset" value="ОЧИСТИТЬ КОРЗИНУ")



